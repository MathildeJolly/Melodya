{% extends "AmamaMelodyaBundle:templates:layout.html.twig" %}

{% block title %}Création de playlist{% endblock %}

{% block body %}
<h3 class="text-center">Création de playlist</h3>

<hr>

<div class="form-group">
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    {{ form_errors(form) }}
    {{ form_row(form.titre) }}
    {{ form_row(form.styleMusique) }}
    {{ form_row(form.privacite) }}
    {{ form_row(form.musique) }}

    {{ form_widget(form.Creer, {'attr': {'class': 'btn btn-success'}}) }}

    {{ form_rest(form) }}
    {{ form_end(form)}}
</div>

{% endblock %}