{% extends "AmamaMelodyaBundle:templates:layout.html.twig" %}

{% block title %}Playlists{% endblock %}

{% block body %}
<h3 class="text-center">Mes playlists</h3>

<hr>

{% if playlists is not defined %}
  {{ msgErreur }}
  <p>Vous n'avez pas encore de playlists.</p>
{% else %}
    <div class="row">
        <p class="text-center">Voici toutes vos playlists.</p>
        {% for playlist in playlists %}
            <div class="col-lg-3 col-lg-push-1 jumbotron" style="margin: 1%; padding: 1%;">
                <a href="{{ path('m_playlist',{'id': playlist.id}) }}" style="margin: 1%;">{{ playlist.titre }}</a>
            </div>
        {% endfor %}
    </div>
{% endif %}

{% endblock %}