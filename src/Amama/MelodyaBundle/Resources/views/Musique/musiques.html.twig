{% extends "AmamaMelodyaBundle:templates:layout.html.twig" %}

{% block title %}Mes musiques{% endblock %}

{% block body %}

<h3 class="text-center"> Mes musiques </h3>

 <p class="text-center" style="color: orange; font-size: 1.2em">
  Retrouvez ici toutes les musiques que vous avez uploadées.</p>

<hr>

{% if not musiques %}
  <p class="text-center">Vous n'avez pas encore uploadé de musique. <a href="{{ path('m_upload') }}">Commencer à uploader une musique</a></p>
{% else %}

{% set items = ['a', 'b', 'c', 'd', 'e', 'f', 'g'] %}

  <table class="table table-hover">
    <thead>
      <tr>
        <th>Titre</th>
        <th>Artiste</th>
        <th>Album</th>
        <th>Style</th>
        <th>Ecoute</th>
      </tr>
    </thead>

    <tbody>
    {% for row in musiques %}
      <tr>
        <td> {{row.titre}}</td>
        <td> {{row.artiste}}</td>

        <td> {{row.album}}</td>
        <td> {{row.tag}}</td>
        <td>
          <audio controls id="mesMusiques">
            <source src="{{ path('m_musique_download',{'musique': row.lien}) }}" type="audio/mp3">
              Votre navigateur ne supporte pas <code>audio</code>.
          </audio>
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

  </div>

  {% endif %}
{% endblock %}
